{{#each error}}
<div class="alert alert-danger">{{texto}}</div>
{{/each}}


<h3>Editar categoria:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/edit" method="post">
            <input type="hidden" value="{{categoria._id}}" name="id">
            <label for="nome">Nome:</label>
            <input type="text" name="nome" placeholder="Nome" class="form-control" value="{{categoria.nome}}" />
            <label for="slug">Slug:</label>
            <input type="text" name="slug" placeholder="Slug" class="form-control" value="{{categoria.slug}}" />
            <br />
            <button type="submit" class="btn btn-success">Confirmar</button>
        </form>
    </div>
</div>